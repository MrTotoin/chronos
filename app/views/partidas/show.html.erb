<% content_for :head do %>
	<%= javascript_tag do %>
		$(function () {  
	      setTimeout(refresca_estado, 1000);  
	  		});  

		function refresca_estado() {  
	  		var partida_id = $('#div_tiempo').attr('data-id')	
	  		$.getScript('/wait_partida.js?partida_id=' + partida_id);  
	  		setTimeout(refresca_estado, 1000);  
			};
	<% end %>
<% end %>

<h1>Partida <%= @partida.id %> </h1>

<% if @partida.show_or_wait ==false %>
	<div id="div_tiempo" data-id="<%= @partida.id %>" >
		<!-- El scrypt actualiza TODA LA TABLA en lugar de solo un campo -->
		<%= render '/partidas/tiempos'%>
	</div>
<% else %> 
	<%= render '/partidas/tiempos'%>
<% end %>

<div style="float:left; with:50%; height:50px; margin-right:100px; ">
	<%= button_to 'Guardar Partida', competencia_partida_path(@competencia, @partida), :method =>:put %>
</div>
<div style="float:right; with:50%; height:50px; margin-right:100px; ">
	<%= button_to 'Descartar Partida', competencia_partida_path(@competencia, @partida), :method => :delete, :confirm =>'Esta a punto de borrar una partida, Â¿desea continuar?' %>
</div>


